<%- include('partials/header_1.ejs') -%>
<link rel="stylesheet" href="/stylesheets/contact.css">
<%- include('partials/header_2.ejs') -%>

<div id="landingGrid" class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-sm-10 col-lg-6 text-center mainColumn">
            <h1>Contact Us</h1>
            <form method="POST" action="/contact">
                <div class="form-row">
                    <div class="form-group col">
                        <label for="inputFirstName">First Name</label>
                        <input type="text" class="form-control" id="inputFirstName" name="contact[firstName]">
                    </div>
                    <div class="form-group col">
                        <label for="inputLastName">Last Name</label>
                        <input type="text" class="form-control" id="inputLastName" name="contact[lastName]">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="inputEmail">Email</label>
                        <input type="email" class="form-control" id="inputEmail" name="contact[email]">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputMessage">Message</label>
                    <textarea class="form-control" id="inputMessage" rows="6" name="contact[message]"></textarea>
                </div>
                <button type="submit" class="btn btn-info btn-block" id="submitButton">Submit Message</button>
            </form>
        </div>
    </div>
</div>
<%- include('partials/footer.ejs') -%>